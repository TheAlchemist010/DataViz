{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Upcoming Projects",
  "width": "container",
  "height": 300,
  "background": "#eaf2f8",
  "data": {
    "url": "https://raw.githubusercontent.com/TheAlchemist010/DataViz/refs/heads/main/A2/data/UpcomingPlants.csv"
  },
  "transform": [
    {
      "filter": {
        "not": {
          "or": [
            {"field": "Status", "equal": "Abandoned"},
            {"field": "Status", "equal": "Complete"},
            {"field": "Status", "equal": "Possibly abandoned"},
            {"field": "Status", "equal": "Cancelled"},
            {"field": "Type", "equal": "Landfill Gas"},
            {"field": "Type", "equal": "Fossil Fuel/Solar"}
          ]
        }
      }
    }
  ],
  "mark": {
    "type": "bar",
    "opacity": 0.8,
    "stroke": "black",
    "strokeWidth": 1 
  },
  "encoding": {
    "y": {"field": "Type", "type": "ordinal", "axis": {"title": "Fuel Type"}},
    "x": {
      "field": "Capacity",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {"title": "Total Energy Generation (MWH)"}
    },
    "color": {
      "field": "Status",
      "type": "nominal",
      "scale": {
        "domain": [
          "Approved",
          "On hold",
          "Pre-construction",
          "Proposed",
          "Under construction",
          "Rejected"
        ],
        "range": [
          "#4caf50",
          "#ff9800",
          "#2196f3",
          "#ffeb3b",
          "#ff7b44",
          "#ff0000"
        ]
      },
      "legend": {"title": "Project Status"}
    },
    "tooltip": [
      {"field": "Project name", "title": "Project name"},
      {"field": "Type", "title": "Fuel Type"},
      {"field": "Status", "title": "Project Status"},
      {"field": "Combined Capacity", "title": "Energy Generation"}
    ]
  },
  "config": {"bar": {"opacity": 0.8}}
}
